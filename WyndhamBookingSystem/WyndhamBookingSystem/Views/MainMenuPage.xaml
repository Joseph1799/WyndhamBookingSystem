<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WyndhamBookingSystem.Views.MainMenuPage"
             Shell.NavBarIsVisible="false">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25">
            <Image
                Source="menu_header.png"
                HorizontalOptions="FillAndExpand"
                Aspect="AspectFit"
                SemanticProperties.Description="Wyndham main page header" />
            <StackLayout Padding="30,0">
                <Label
                Text="Wyndham"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
                
                <Label
                    Text="Welcome"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

                <Button
                    x:Name="CounterBtn"
                    Text="Go to Login Page" 
                    SemanticProperties.Hint="Navigates to Login Page"
                    Clicked="OnGoToLoginClicked"
                    HorizontalOptions="Fill" 
                    BackgroundColor="#212D5F"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
